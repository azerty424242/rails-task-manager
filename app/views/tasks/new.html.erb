<%# Creating a new view to display the task form %>


<div class="container mt-5">
  <h1 class="mb-4">New Task</h1>
  <%= form_with model: @task, url: tasks_path, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :details, class: "form-label" %>
      <%= form.text_area :details, class: "form-control" %>
    </div>
    <div class="d-flex">
      <%= form.submit "Create Task", class: "btn btn-primary me-2" %>
      <%= link_to "Cancel", tasks_path, class: "btn btn-danger" %>
    </div>

    <p class="mt-3">
    <%= link_to "Back to List", tasks_path, class: "text-secondary text-decoration-none" %>
    </p>
  <% end %>
</div>
